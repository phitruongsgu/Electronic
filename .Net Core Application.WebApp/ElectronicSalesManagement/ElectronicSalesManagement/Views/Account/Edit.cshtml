@model ModelView
@{
    ViewData["Title"] = "Edit your profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .maincontent {
        background-color: white;
        padding: 5px;
        border-radius: 10px;
        border: 1px solid #ccc;
        box-shadow: 0 .15rem 1.75rem 0 rgba(58,59,69,.15) !important;
    }
</style>
<div class="container maincontent">
    <div class="text-right" style="margin-top:10px;margin-right:10px">
        <a href="/Account/Detail" class="btn btn-primary"> <i class="fa fa-reply-all"></i> &nbsp; Back</a>
    </div>
    <h1 style="text-align:center"> <i class="fa fa-pencil-alt"></i>&nbsp;EDIT YOUR PROFILE</h1>
    <div class="col-md-12">
        <form href="/Account/Edit" method="POST" style="width:600px;margin:0 auto;">
            <div hidden>
                <label>ID Account</label>
                <input asp-for="@Model.accountModel.ID_Account" value="@Model.account.ID_Account" type="text" />
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="@Model.accountModel.Username"></label>
                <input type="text" asp-for="@Model.accountModel.Username" value="@Model.account.Username" class="form-control" />
                <span asp-validation-for="accountModel.Username" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="font-weight-bold" asp-for="@Model.accountModel.Password"></label>
                <input type="password" asp-for="@Model.accountModel.Password" value="" class="form-control" />
                <span asp-validation-for="accountModel.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold" asp-for="@Model.accountModel.Email"></label>
                <input type="email" asp-for="@Model.accountModel.Email" value="@Model.account.Email" class="form-control" />
                <span asp-validation-for="accountModel.Email" class="text-danger"></span>
            </div>

            <div class="text-center mt-3" style="margin-bottom:30px">
                <button class="btn btn-danger mb-2 mr-1" type="submit">Complete the update</button>
            </div>
        </form>
    </div>
</div>

