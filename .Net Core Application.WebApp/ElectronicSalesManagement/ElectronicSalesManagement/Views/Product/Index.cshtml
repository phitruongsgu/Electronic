@section Product_Index{
    <script>

        var body = $("html, body");
        body.animate({ scrollTop: 400 });

        //#region Loader
        $(window).on('load', function (event) {
            $('body').removeClass('preloading');
            // $('.load').delay(1000).fadeOut('fast');
            $('.loader').delay(1000).fadeOut('fast');
        });
        //#endregion

        // #region Phân trang
        window.setTimeout("load()", 0);
        var pageSize = 8;
        function load() {
            for (var i = pageSize + 1; i <= 1000; i++) {
                $("#page_" + i).hide();
            }
            body.animate({ scrollTop: 725 });
        }
        function pagination(pageNumber, size) {
            $(".page_current").html("Current page: " + pageNumber);
            if (pageNumber == 1) {
                for (var i = 1; i <= pageSize; i++) {
                    $("#page_" + i).show();
                }
                for (var i = pageSize + 1; i <= Math.ceil(size); i++) {
                    $("#page_" + i).hide();
                }
                body.animate({ scrollTop: 725 });
            } else {
                var fromPage = (pageNumber * pageSize) - (pageSize - 1);
                var toPage = pageNumber * pageSize;
                for (var i = 1; i < (pageNumber * pageSize) - (pageSize - 1); i++) {
                    $("#page_" + i).hide();
                }
                for (var i = (pageNumber * pageSize) - (pageSize - 1); i <= toPage; i++) {
                    $("#page_" + i).show();
                }
                for (var i = (pageNumber * pageSize) + 1; i <= size; i++) {
                    $("#page_" + i).hide();
                }
                body.animate({ scrollTop: 725 });
            }
        }
        // #endregion

        //#region Add to cart

        function AddToCart(id) {
            $.ajax({
                url: "/Product/AddToCart_OnlyOne",
                type: "post",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    "IDProduct": id
                }),
                cache: false,
                success: function (message) {
                    $("#modal_body").html(message);
                    $('#dialog1').modal('show');
                    location.reload();
                },
                error: function () {
                    $("#modal_body").html('<i class="fas fa-exclamation-triangle"></i>&ensp;Add to cart failt.!!!');
                    $('#dialog1').modal('show');
                }
            });
        }

        //#endregion

        //#region call filter for category
        var categoryFilter = $("#filter_1").text().toLowerCase();
        if (categoryFilter == 'screen') {
            $("#laptop").hide();
            $("#screen").show();
            $("#harddrive").hide();
            $("#ram").hide();
        } else {
            if (categoryFilter == 'hard drive') {
                $("#laptop").hide();
                $("#screen").hide();
                $("#harddrive").show();
                $("#ram").hide();
            } else {
                if (categoryFilter == 'ram') {
                    $("#laptop").hide();
                    $("#screen").hide();
                    $("#harddrive").hide();
                    $("#ram").show();
                } else {
                    $("#laptop").show();
                    $("#screen").hide();
                    $("#harddrive").hide();
                    $("#ram").hide();
                }
            }
        }
                            //#endregion

    </script>
}
