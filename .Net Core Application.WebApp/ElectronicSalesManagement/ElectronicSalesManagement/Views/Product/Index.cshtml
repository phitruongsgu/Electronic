                    var size = products.Count();
                    if (size != 0)
                    {
                        <p class="page_current mb--10">Current page: 1</p>
                    }
                    else
                    {
                        <p class="page_current mb--10">Don't have products</p>
                    }
                    <div class="ml-auto mr-auto">
                        @for (var i = 1; i <= Math.Ceiling((double)size / 8); i++)
                        {
                            <a style="cursor:pointer;padding:3px;font-size:18px;"
                               class="page-link"
                               onclick="pagination(@i,@size)">@i</a>
                        }
                    </div>
                }
            </div>
            <div class="col-lg-4 ml-auto mr-auto"></div>
        </div>
    </div>
