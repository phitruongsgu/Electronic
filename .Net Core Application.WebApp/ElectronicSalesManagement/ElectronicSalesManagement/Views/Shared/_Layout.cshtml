    <script src="~/js/vendor/jquery-1.12.0.min.js"></script>
    <script src="~/js/vendor/jquery.paginate.js"></script>
    <!-- Bootstrap framework js -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- All js plugins included in this file. -->
    <script src="~/js/plugins.js"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <!-- Waypoints.min.js. -->
    <script src="~/js/waypoints.min.js"></script>
    <!-- Main js file that contents all jQuery plugins activation. -->
    <script src="~/js/main.js"></script>
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Header", required: false);
    @RenderSection("Detail", required: false);
    @RenderSection("Product_Index", required: false);
    @RenderSection("Cart", required: false);
    @RenderSection("Checkout", required: false);
    @RenderSection("History_Index", required: false);
    @RenderSection("History_Detail", required: false);

    <script>

        window.setTimeout("checkTotalMoney_Header()", 5);

        function checkTotalMoney_Header() {
            $.ajax({
                url: "/Cart/GetTotalMoney_ForCheck",
                type: "post",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                }),
                cache: false,
                success: function (message) {
                    $("#totalMoneyHeader").html(message);
                    window.setTimeout("checkTotalMoney_Header()", 5000);
                },
                error: function () {
                    alert("failt");
                }
            });
        }
    </script>

</body>
</html>
